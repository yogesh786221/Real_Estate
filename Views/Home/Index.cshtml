@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel Section -->
<div id="homeCarousel" class="carousel slide mb-5 shadow-lg" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="5" aria-label="Slide 6"></button>
    </div>
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img src="~/assets/images/slides/slide1.jpg" class="d-block w-100" alt="Slide 1">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/slides/slide2.jpg" class="d-block w-100" alt="Slide 2">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/slides/Updated.jpg" class="d-block w-100" alt="Slide 3">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/slides/slide4.jpg" class="d-block w-100" alt="Slide 4">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/slides/slide5.jpg" class="d-block w-100" alt="Slide 5">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/slides/Hurryup.jpg" class="d-block w-100" alt="Slide 6">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Tagline -->
<div class="text-center my-5 parallax-tagline">
    <h1 class="display-5 fw-bold text-primary animate__animated animate__fadeInDown">Find Your Dream Home</h1>
    <p class="lead text-muted animate__animated animate__fadeInUp">Browse listings, explore neighborhoods, and connect with agents today.</p>
    <a asp-controller="Home" asp-action="Projects" class="btn btn-outline-primary mt-3 animate__animated animate__zoomIn">Explore Now</a>
</div>

<!-- Special Offers -->
<div class="my-5 bg-light p-4 rounded shadow animate__animated animate__fadeInUp">
    <h2 class="text-center fw-bold mb-4 text-danger"><i class="fas fa-gift me-2"></i>Special Offers</h2>
    <div class="row g-4 justify-content-center">
        <!-- Offer 1 -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-percentage fa-3x text-warning mb-3"></i>
                    <h5 class="fw-bold">02% Off on Smart Homes</h5>
                    <p class="text-muted">Book now and get an exclusive 02% discount on Smart Homes Phase 1 bookings made this month! Free rental home's with possesion</p>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-warning px-4 py-2">
                        <i class="fas fa-gift me-2"></i> Claim Offer
                    </a>
                </div>
            </div>
        </div>
        <!-- Offer 2 -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-coins fa-3x text-success mb-3"></i>
                    <h5 class="fw-bold">Booking Fee only 51000</h5>
                    <p class="text-muted">Pay only Rs.51000 charges on selected commercial properties. Offer valid for a limited time.</p>
                    <a asp-controller="Home" asp-action="Projects" class="btn btn-success">Explore Projects</a>
                </div>
            </div>
        </div>
        <!-- Offer 3 -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Free Consultation</h5>
                    <p class="text-muted">Get a free one-on-one investment consultation with our senior advisor when you register this week.</p>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-info text-white">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Project Videos -->
<div class="bg-light p-4 rounded my-5 shadow-sm">
    <h2 class="mb-4 text-dark"><i class="fas fa-video me-2"></i>Project Videos</h2>
    <div class="overflow-auto d-flex gap-3 pb-2">
        <video src="~/videos/1.mp4" controls muted class="rounded" style="height: 200px; object-fit: cover;"></video>
        <video src="~/videos/2.mp4" controls muted class="rounded" style="height: 200px; object-fit: cover;"></video>
        <video src="~/videos/3.mp4" controls muted class="rounded" style="height: 200px; object-fit: cover;"></video>
        <video src="~/videos/4.mp4" controls muted class="rounded" style="height: 200px; object-fit: cover;"></video>
        <video src="~/videos/5.mp4" controls muted class="rounded" style="height: 200px; object-fit: cover;"></video>
    </div>
</div>

